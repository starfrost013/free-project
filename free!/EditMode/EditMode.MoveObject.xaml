        <TextBox x:Name="YPosBox" HorizontalAlignment="Left" Height="26" Margin="112,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="133" FontStyle="Italic" VerticalContentAlignment="Center"/>
        <TextBlock x:Name="ClickToFill" HorizontalAlignment="Left" Margin="18,153,0,0" TextWrapping="Wrap" Text="Alternatively, right-click on any area of the level and then click the Pick button to auto-fill coordinates." VerticalAlignment="Top" FontStyle="Italic"/>
        <Button x:Name="PickButton" Content="Pick" HorizontalAlignment="Left" Margin="18,133,0,0" VerticalAlignment="Top" Width="75" Click="PickButton_Click"/>
        <Button x:Name="MoveButton" Content="Move" HorizontalAlignment="Left" Margin="555,124,0,0" VerticalAlignment="Top" Width="75" Click="OKButton_Click"/>

    </Grid>
</Window>
